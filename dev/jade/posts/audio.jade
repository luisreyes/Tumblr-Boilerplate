|{block:ExternalAudio}
section.theme-audio
  
  //- Album Art
  div.art(style="{block:AlbumArt} background-image:url('{AlbumArtURL}'); {/block:AlbumArt}")
  
  //- Audio Player
  |{block:AudioPlayer}
  div.player {AudioPlayer}
  |{/block:AudioPlayer}
  
  //- Artist
  |{block:Artist}
  div.artist
    span Artist: {Artist}
  |{/block:Artist}

  //- Track
  |{block:TrackName}
  div.track
    span Track: {TrackName}
  |{/block:TrackName}

  //- Album
  |{block:Album}
  div.album
    span Album: {Album}
  |{/block:Album}

  //- Play Count
  div.playcount
    span.label {lang:Plays}: 
    span {PlayCount}
  
|{/block:ExternalAudio}

//- Post Caption
|{block:Caption}
section.caption {Caption}
|{/block:Caption}


